@model GlossaryOfTerms.Models.Glossary

@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.ID > 0)
    {
        @Html.HiddenFor(a => a.ID)
    }
    <div class="form-group">
        <label>Term</label>
        @Html.TextBoxFor(a => a.Term, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Term)
    </div>
    <div class="form-group">
        <label>Definition</label>
        @Html.TextAreaFor(a => a.Definition, new { rows = 6, @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Definition)
    </div>

    <div class="center">
        <input type="submit" class="btn btn-success" style="width:150px;" value="Save">

    </div>
}

